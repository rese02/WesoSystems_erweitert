rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Hotels and their subcollections are only accessible by authenticated users (agency/hotelier)
    match /hotels/{hotelId}/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Booking links can be updated by anyone to prevent reuse
    match /bookingLinks/{linkId} {
      allow read: if true;
      allow update: if true; // Allow guests to mark the link as 'used'
      allow create, delete: if request.auth != null;
    }
  }
}
