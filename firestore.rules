rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Standardmäßig alle Lese- und Schreibzugriffe verweigern.
    match /{document=**} {
      allow read, write: if false;
    }

    // Hotels: Nur authentifizierte Benutzer (Agentur/Admins) können Hotels erstellen/lesen.
    // In einer echten App würde man hier die Rollen (`request.auth.token.role`) prüfen.
    match /hotels/{hotelId} {
      allow read, write: if request.auth != null; 
      
      // Bookings & Guests: Nur authentifizierte Benutzer mit der richtigen Hotel-ID können darauf zugreifen.
      match /bookings/{bookingId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Buchungslinks (guestLinks): Darf öffentlich gelesen, aber nur vom Server (authentifiziert) beschrieben werden.
    // Der Gast benötigt Lesezugriff, um seine Buchungsdetails anzuzeigen.
    match /guestLinks/{linkId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
