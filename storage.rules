rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow writes to guest-uploads for authenticated users
    match /guest-uploads/{linkId}/{fileName} {
      allow write: if request.auth != null;
    }

    // Allow reads for specific paths if you have a use case for it
    // For example, if you store public images in a `public` folder
    match /public/{allPaths=**} {
      allow read: if true;
    }
  }
}
