rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Standardmäßig alle Lese- und Schreibzugriffe verweigern.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Erlaube Uploads nur für authentifizierte Benutzer.
    // In einer echten App würde man den Pfad genauer einschränken,
    // z.B. /hotels/{hotelId}/documents/{userId}/{fileName}
    // und prüfen, ob der `request.auth.uid` die Berechtigung hat.
    match /uploads/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null; // Erlaube Lesevorgänge für authentifizierte Benutzer
    }
  }
}
