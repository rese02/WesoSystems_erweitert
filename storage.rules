rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to write to the bookings directory.
    // This is necessary for guests to upload their documents.
    // The security is handled by the unguessable download URLs, which are
    // stored in the secure Firestore database.
    match /bookings/{bookingId}/{fileName} {
      allow write: if true;
      allow read: if request.auth != null; // Only authenticated users (hoteliers, admins) can read
    }

    // Allow authenticated users to manage their hotel logos
    match /logos/{hotelId}/{fileName} {
       allow read: if true; // Logos can be public
       allow write: if request.auth != null;
    }

    // Deny all other routes by default
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
